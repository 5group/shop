<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.mapper.CategoriesMapper">
	
	<insert id="insert" parameterType="Categories">
		INSERT INTO Categories VALUES (cate_no, #{cate_name}, #{cate_no2})
	</insert>
	
	<delete id="delete" parameterType="Integer">
		DELETE FROM Categories WHERE cate_no=#{cate_no}
	</delete>
	
	<insert parameterType="Categories" id="insert">
		INSERT INTO item VALUES (cate_no, #{cate_name}, #{cate_no2})
	</insert>

	<update parameterType="Categories" id="update">
		UPDATE item SET cate_name=#{cate_name}, cate_no2=#{cate_no2} WHERE cate_no=#{cate_no}
	</update>

</mapper>
